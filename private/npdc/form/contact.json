{
	"method": "post",
	"action": "contact",
	"hint": "all",
	"fields": {
		"qc": {
			"type": "hint",
			"hint": "For checking reliability and fighting spam all information entered below and your ip-address, browser and operating system will be stored in our database."
		},
		"name": {
			"type": "text",
			"label": "Your name",
			"placeholder": "Your name"
			},
		"mail": {
			"type": "mail",
			"label": "Your email address",
			"placeholder": "Email address",
			"hint": "We will only use this for responding to your message"
		},
		"country": {
			"type": "antispam",
			"label": "Country",
			"placeholder": "Your country",
			"required": false
		},
		"subject": {
			"type": "text",
			"label": "Subject",
			"required": false,
			"placeholder": "Message subject (not required)"
		},
		"message": {
			"type": "textarea",
			"label": "Your message",
			"placeholder": "Message"
		},
		"captcha": {
			"type": "captcha",
			"label": "Captcha"
		},
		"submit": {
			"type": "submit",
			"value": "Send",
			"hint": "A copy of your message will be sent to you"
		}
	}
}